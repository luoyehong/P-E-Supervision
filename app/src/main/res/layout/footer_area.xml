<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BFBFBF"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/home_relative"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/ic_image_home"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_home"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/ic_text_home"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="主页"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/envi_relative"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/ic_image_envi"
                    android:layout_width="36dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_envi"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/ic_text_envi"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="环境"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/power_relative"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/ic_image_power"
                    android:layout_width="36dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_power"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/ic_text_power"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="配电"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cooling_relative"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/ic_image_cooling"
                    android:layout_width="34dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_cooling"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/ic_text_cooling"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="制冷"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/record_relative"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/ic_image_record"
                    android:layout_width="34dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_record"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/ic_text_record"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="记录"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>